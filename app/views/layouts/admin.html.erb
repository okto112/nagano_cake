<!DOCTYPE html>
<html>
<head>
  <title>Admin - naganocake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <% if admin_signed_in? %>
    <div class="text-right">
      <%= link_to '商品一覧', admin_items_path %>
      <%= link_to '会員一覧', admin_customers_path %>
      <%= link_to 'ジャンル一覧', admin_genres_path %>
      <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
    </div>
    <%= form_with url: admin_items_path, method: :get do |f| %>
      <%= f.text_field :item_name, placeholder: "Search" %>
    <% end %>
  <% end %>
  <%= yield %>
</body>
</html>