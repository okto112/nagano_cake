<!DOCTYPE html>
<html>
<head>
  <title>Admin - naganocake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <script src="https://kit.fontawesome.com/805b015b17.js" crossorigin="anonymous"></script>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
   <header class="header mb-2">
      <div class="container-fluid">
        <div class="row pt-3">
          <div class="col-1">
            <div class="logo">
              <h1>LOGO</h1>
            </div>
          </div>
          <div class="col-8 offset-3">
            <div class="row">
              <% if admin_signed_in? %>
                <div class="col-2">
                  <div class="header-content">
                    <%= link_to '商品一覧', admin_items_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
                <div class="col-2">
                  <div class="header-content">
                    <%= link_to '会員一覧', admin_customers_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
                <div class="col-2">
                  <div class="header-content">
                    <%= link_to '注文履歴一覧', admin_root_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
                <div class="col-2">
                  <div class="header-content">
                    <%= link_to 'ジャンル一覧', admin_genres_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
                <div class="col-2">
                  <div class="header-content">
                    <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class:"btn btn-outline-dark" %>
                  </div>
                </div>

                <% elsif %>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to 'About', about_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to '商品一覧', public_items_path, class:"btn btn-outline-dark" %>
                   </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to '新規登録', new_customer_registration_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
                <div class="col-3">
                  <div class="header-content">
                    <%= link_to 'ログイン', new_admin_session_path, class:"btn btn-outline-dark" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-2 ml-auto">
          <%= form_with url: admin_items_path, method: :get do |f| %>
            <%= f.text_field :item_name, placeholder: "Search" %>
          <% end %>
        </div>
      </div>
    </header>
    <main class="container-fluid">
      <div class="row">
        <%= yield %>
      </div>
    </main>
    <footer></footer>
</body>
</html>