<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td>
        <%= link_to admin_order_path(order_detail.id) do %>
          <%= order_detail.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %></td>
      <td>
        <%= Order.find(order_detail.order_id).name %>
      </td>
      <td><%= order_detail.amount %></td>
      <td><%= Order.find(order_detail.order_id).status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @order_details %>