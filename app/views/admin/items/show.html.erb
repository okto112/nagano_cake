<h1>商品詳細</h1>

<%= image_tag @item.get_image(100,100) %>

<table>
  <tbody>
    <tr>
      <td>
        商品名
      </td>
      <td>
        <%= @item.name %>
      </td>
    </tr>

    <tr>
      <td>
        商品説明
      </td>
      <td>
        <%= @item.introduction %>
      </td>
    </tr>

    <tr>
      <td>
        ジャンル
      </td>
      <td>
        <%= @genres.find(@item.genre_id).name %>
      </td>
    </tr>

    <tr>
      <td>
        税抜価格(税込価格)
      </td>
      <td>
        <%= @item.price %>(<%= @item.price.to_i + @item.price.to_i % 10 %>)
      </td>
    </tr>

    <tr>
      <td>
        会員ステータス
      </td>
      <td>
        <% if @item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to '編集する', edit_admin_customer_path %>