<div class="col">
  <h2 class="p-2 bg-secondary text-white mb-5 text-center">商品詳細</h2>

  <div class="row">
    <div class="col-3 ml-3 m-auto text-center">
      <%= image_tag @item.get_image(100,100) %>
    </div>

    <div class="col-6 ml-3 m-auto">
      <table>
        <tbody>
          <tr>
            <td style="width: 50%">商品名</td>
            <td style="width: 40%"><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @genres.find(@item.genre_id).name %></td>
          </tr>

          <tr>
            <td>税抜価格(税込価格)</td>
            <td><%= @item.price.to_s(:delimited) %>(<%= (@item.price * 1.1).round.to_s(:delimited) %>)円</td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-1 m-auto">
    <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success mt-4" %>
  </div>
</div>