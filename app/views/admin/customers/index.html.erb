<div class="col">
  <h2 class="p-2 bg-secondary text-white mb-5 text-center">会員一覧</h2>

  <table class="table">
    <thead>
      <tr>
        <th class="table-active">会員ID</th>
        <th class="table-active">氏名</th>
        <th class="table-active">メールアドレス</th>
        <th class="table-active">ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active == true %>
            <p class="text-success font-weight-bold">有効</p>
          <% else %>
            <p class="text-danger font-weight-bold">退会</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @customers %>
</div>