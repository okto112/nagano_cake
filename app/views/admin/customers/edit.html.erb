<div class="col">
  <h2 class="p-2 bg-secondary text-white mb-5 text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

  <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
    <table>
      <tbody>
        <tr>
          <td style="width: 40%">
            会員ID
          </td>
          <td style="width: 40%">
            <%= @customer.id %>
          </td>
        </tr>

        <tr>
          <td>
            氏名
          </td>
          <td>
            <%= f.text_field :last_name, autofocus: true, placeholder:"姓" %>
          </td>
          <td>
            <%= f.text_field :irst_name, placeholder:"名" %>
          </td>
        </tr>

        <tr>
          <td>
            カナ
          </td>
          <td>
            <%= f.text_field :last_name_kana, placeholder:"セイ" %>
          </td>
          <td>
            <%= f.text_field :first_name_kana, placeholder:"メイ" %>
          </td>
        </tr>

        <tr>
          <td>
            郵便番号
          </td>
          <td>
            <%= f.text_field :postal_code, placeholder:"000000" %>
          </td>
        </tr>

        <tr>
          <td>
            住所
          </td>
          <td>
            <%= f.text_field :address, placeholder:"住所" %>
          </td>
        </tr>

        <tr>
          <td>
            電話番号
          </td>
          <td>
            <%= f.text_field :telephone_number, placeholder:"00000000000" %>
          </td>
        </tr>

        <tr>
          <td>
            メールアドレス
          </td>
          <td>
            <%= f.text_field :email, placeholder:"○○○＠○○○○" %>
          </td>
        </tr>

        <tr>
          <td>
            会員ステータス
          </td>
          <td>
            <%= f.radio_button :is_active, :true, checked: true %>
            <%= f.label :is_active, "有効", class:"text-success font-weight-bold" %>

            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", class:"text-danger font-weight-bold" %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td>
            <%= f.submit "編集を保存", class:"btn btn-success" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>