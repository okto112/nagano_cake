<div class="col">
  <h2 class="p-2 bg-secondary text-white mb-5 text-center">ジャンル一覧・追加</h2>

  <%= form_with model: @genre, url: admin_genres_path(@genre) do |f| %>
    <p>ジャンル名</p>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class:"btn btn-success" %>
  <% end %>

  <div class="col-3 mt-4">
    <table class="table">
      <thead>
        <tr>
          <th class="table-active">ジャンル</th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td class = "d-flex justify-content-between">
            <%= genre.name %>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>