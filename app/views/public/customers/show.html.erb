<div class="col">
  <div class="text-center">
    <h2 class="p-2 bg-secondary text-white">マイページ</h2>

    <div class="row">
      <h2 class="m-3">登録情報</h2>
      <p><%= link_to '編集する', public_customers_information_edit_path,class:"btn btn-success btn-sm m-4" %></p>
    </div>

    <table class="table">
      <tbody>
        <tr>
          <td class="table-active">氏名</td>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>

        <tr>
          <td class="table-active">カナ</td>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <td class="table-active">住所</td>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <h4 class="m-3">配送先</h4>
      <p><%= link_to '一覧を見る', public_addresses_path, class:"btn btn-primary btn-sm m-3" %></p>
    </div>

    <div class="row">
      <h4 class="m-3">注文履歴</h4>
      <p><%= link_to '一覧を見る', public_orders_path, class:"btn btn-primary btn-sm m-3" %></p>
    </div>
  </div>
</div>