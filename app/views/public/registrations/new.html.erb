<div class="col">
  <h2>新規会員登録</h2>

  <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="row">
        <div class="col-2">
          <%= f.label :last_name %>
          <%= f.text_field :last_name %>
        </div>
        <div class="col-2">
          <%= f.label :first_name %>
          <%= f.text_field :first_name %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="row">
        <div class="col-2">
          <%= f.label :last_name_kana %>
          <%= f.text_field :last_name_kana %>
        </div>
        <div class="col-2">
          <%= f.label :first_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :postal_code %><br>
      <%= f.text_field :postal_code %>
    </div>
    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :telephone_number %><br>
      <%= f.text_field :telephone_number %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-success mt-4" %>
    </div>
  <% end %>

  <div class="mt-4">
    <h4>既に登録済みの方</h4>
    <p>
      <%= link_to 'こちら', new_customer_session_path %>
      からログインしてください。
    </p>
  </div>
</div>