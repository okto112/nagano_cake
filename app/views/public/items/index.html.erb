<%= render 'genre_search', genres: @genres %>

<h1><%= @title %>一覧</h1><p>(全<%= @items.count %>件)</p>

  <% @items.each do |item| %>
    <%= link_to public_item_path(item.id) do %>
      <div>
        <p>
          <%= image_tag item.get_image(100,100) %>
        </p>

        <p>
          <%= item.name %>
        </p>

        <p>
          ￥<%= item.price %>
        </p>
      </div>
    <% end %>
  <% end %>


<%= paginate @items %>