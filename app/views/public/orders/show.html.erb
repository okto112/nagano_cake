<h1>注文履歴詳細</h1>

<h3>注文情報</h3>
<table>
  <tbody>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>

    <tr>
      <td>配送先</td>
      <td>
        <p><%= '〒' + @order.postal_code + ' ' + @order.address %></p>
        <p><%= @order.name %></p>
      </td>
    </tr>

    <tr>
      <td>支払方法</td>
      <td><%= @order.payment_method_i18n %></td>
    </tr>

    <tr>
      <td>ステータス</td>
      <td><%= @order.status_i18n %></td>
    </tr>
  </tbody>
</table>

<h3>請求情報</h3>
<table>
  <tbody>
    <tr>
      <td>商品合計</td>
      <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %>円</td>
    </tr>

    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_cost.to_s(:delimited) %></td>
    </tr>

    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<h3>注文内容</h3>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= Item.find(order_detail.item_id).name %></td>
      <td><%= order_detail.purchase_price.to_s(:delimited) %></td>
      <td><%= order_detail.amount %></td>
      <td><%= (order_detail.purchase_price * order_detail.amount).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>