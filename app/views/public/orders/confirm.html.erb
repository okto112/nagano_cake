<h1>注文情報確認</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.get_image(50,50) %>
        <%= Item.find(cart_item.item_id).name %>
      </td>
      <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
    </tr>
    <% @items_total += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <td>送料</td>
      <td>800</td>
    </tr>

    <tr>
      <td>商品合計</td>
      <td><%= @items_total.to_s(:delimited) %></td>
    </tr>

    <tr>
      <td>請求金額</td>
      <td><%= (@items_total + 800 ).to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<h3>支払方法</h3>
<p><%= @order.payment_method_i18n %></p>

<h3>お届け先</h3>
<p><%= '〒' + @order.postal_code + ' ' + @order.address %></p>
<p><%= @order.name %></p>


<%= form_with model: @order, url: public_orders_path do |f| %>

<%= f.hidden_field :total_payment, :value => @items_total + 800 %>
<%= f.hidden_field :shipping_cost, :value => 800 %>
<%= f.hidden_field :payment_method, :value => @order.payment_method %>
<%= f.hidden_field :customer_id, :value => @order.customer_id %>
<%= f.hidden_field :name, :value => @order.name %>
<%= f.hidden_field :postal_code, :value => @order.postal_code %>
<%= f.hidden_field :address, :value => @order.address %>
<%= f.hidden_field :status, :value => Order.statuses.key(0) %>


<%= f.submit "注文を確定する" %>

<% end %>