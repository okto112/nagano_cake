<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", public_destroy_all_cart_items_path, method: :delete, data: {confirm: "カートを空にしますか？"} %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.get_image(50,50) %>
        <%= Item.find(cart_item.item_id).name %>
      </td>
      <td>
        <%= cart_item.item.with_tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id) do |f| %>

          <%= f.select :amount, *[1..10], selected: cart_item.amount %>
          <%= f.hidden_field :item_id, :value => cart_item.id %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.submit "変更" %>

        <% end %>
      </td>
      <td>
        <%= cart_item.subtotal.to_s(:delimited) %>
      </td>
      <td>
        <%= link_to "削除", public_cart_item_path(cart_item), method: :delete, data: {confirm: "削除しますか？"} %>
      </td>
    </tr>
    <% @total += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける",public_root_path %>

<table>
  <tbody>
    <tr>
      <td>合計金額</td>
      <td><%= @total.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<%= link_to "情報入力に進む" %>