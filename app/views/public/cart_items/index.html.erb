<h1>ショッピングカート</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.get_image(50,50) %>
        <%= item.name %>
      </td>
      <td>
        <%= cart_item.item.with_tax_price%>
      </td>
      <td>
        <%= cart_item.subtotal%>
      </td>
      <td>
        <% if item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>