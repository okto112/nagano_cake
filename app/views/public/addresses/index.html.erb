<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: public_addresses_path do |f| %>
  <table>
    <tbody>
      <tr>
        <td>
          郵便番号(ハイフンなし)
        </td>
        <td>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
        </td>
      </tr>

      <tr>
        <td>
          住所
        </td>
        <td>
          <%= f.text_field :address, placeholder: "住所" %>
        </td>
      </tr>

      <tr>
        <td>
          宛名
        </td>
        <td>
          <%= f.text_field :name, placeholder: "宛名" %>
        </td>
        <td>
          <%= f.submit "新規登録" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>


<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td>
        <%= address.postal_code %>
      </td>
      <td>
        <%= address.address %>
      </td>
      <td>
        <%= address.name %>
      </td>
      <td>
        <%= link_to '編集する', edit_public_address_path(address.id) %>
        <%= link_to '削除する', public_address_path(address.id), method: :delete, data: {confirm: "削除しますか？"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>